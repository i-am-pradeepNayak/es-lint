{
  "env": {
    "es2021": true,
    "commonjs": true,
    "node": true
  },
  "root": true,
  "extends": "standard",
  "ignorePatterns": ["helpers/**/test.js"],
  "rules": {
    // enable additional rules
    "indent": ["error", 4],
    "no-console": 1,
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["*helpers/**"],
      // "excludedFiles": "decode.js",
      "rules": {
        "no-console": 2,
        "quotes": ["error", "double"]
      }
    }
  ]
}
