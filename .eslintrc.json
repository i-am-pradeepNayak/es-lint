{
  "env": {
    "es2021": true,
    "commonjs": true,
    "node": true
  },
  "root": true,
  "extends": "standard",
  "rules": {
    // enable additional rules
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  },
  "noInlineConfig": true,  //disable all inline rules or config
  "overrides": [
    {
      "files": ["*helpers/**"],
      "excludedFiles": "*decode.js",
      "rules": {
        "no-console": 2,
        "quotes": ["error", "double"]
      },
      "reportUnusedDisableDirectives": true   //shows unused inline rules
    }
  ]
}
