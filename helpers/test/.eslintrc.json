{
  "env": {
    "es2021": true,
    "commonjs": true,
    "node": true
  },
  "root": true,
  "extends": "standard",
  "rules": {
    // enable additional rules
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["**/*decode.js"],
      "excludedFiles": "*parser.js",
      "rules": {
        "quotes": ["error", "single"],
        "no-console": "error"
      }
    }
  ]
}
